<ul>
  <% @restaurants.each do |restaurant| %>
    <li data-restaurant-id="<%= restaurant.id %>">
      <div>
        <%= link_to restaurant.name, restaurant_path(restaurant) %>
        <%= link_to "Delete", restaurant_path(restaurant), method: :delete, remote: true %>
      </div>
    </li>
  <% end %>
</ul>